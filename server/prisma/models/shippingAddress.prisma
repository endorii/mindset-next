model ShippingAddress {
    id         String @id @default(cuid())
    user       User   @relation(fields: [userId], references: [id])
    userId     String @unique @map("user_id")
    recipient  String
    country    String
    region     String
    city       String
    postalCode String @map("postal_code")
    street     String
    building   String
    apartment  String
}
